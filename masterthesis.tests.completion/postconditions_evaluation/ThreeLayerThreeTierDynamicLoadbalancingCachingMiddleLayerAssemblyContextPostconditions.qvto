query testAssembliesAllocatedToCorrectTiers(newAllocation : Allocation) {
	var wrongAllocations : Set(AllocationContext) := newAllocation.allocationContexts_Allocation->select(ac : AllocationContext |
		hasAppliedStereotype(ac.assemblyContext_AllocationContext, 'PresentationLayerAssembly') 
		and not hasAppliedStereotype(ac.resourceContainer_AllocationContext, 'PresentationTier')
		or 
		hasAppliedStereotype(ac.assemblyContext_AllocationContext, 'MiddleLayerAssembly') 
		and not hasAppliedStereotype(ac.resourceContainer_AllocationContext, 'MiddleTier')
		or
		hasAppliedStereotype(ac.assemblyContext_AllocationContext, 'DataLayerAssembly') 
		and not hasAppliedStereotype(ac.resourceContainer_AllocationContext, 'DataTier')
		);
		var wrongAllocationsCount : Integer = wrongAllocations->size();
		
	assert error(wrongAllocationsCount = 0) 
		with log('The System has at least one Assembly Context that is wrongly allocated.');
}

query areEqualStringSets(stringSet1 : Bag(String), stringSet2 : Bag(String)):Boolean{
	var set1InSet2 : Boolean := stringSet2->includesAll(stringSet1);
	var set2InSet1 : Boolean := stringSet1->includesAll(stringSet2);
	var areEqual : Boolean := set1InSet2 and set2InSet1;
	return areEqual;
}